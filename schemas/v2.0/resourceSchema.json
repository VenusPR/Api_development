{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [ "swagger", "host", "basePath", "schemes" ],
  "properties": {
    "swagger": {
      "type": "number",
      "enum": [ 2.0 ]
    },
    "host": {
      "type": "string"
    },
    "basePath": {
      "type": "string"
    },
    "schemes": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [ "http", "https" ]
      }
    },
    "consumes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "produces": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "paths": {
      "items": {
        "$ref": "https://raw.githubusercontent.com/fehguy/swagger-spec/master/schemas/v2.0/operationSchema.json"
      }
    }
  }
}