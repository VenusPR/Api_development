{
  "schemas": {
    "Error": {
      "required": [ "code", "message" ],
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        }
      }
    }
  },
  "responses": {
    "200": {
      "description": "Returns an array of pets",
      "type": "array",
      "items": {
        "$ref": "Pet"
      }
    },
    "400": {
      "description": "Invalid ID supplied",
      "$ref": "#/models/Error"
    },
    "404": {
      "description": "Pet not found"
    },
    "default": {
      "description": "Some other terrible error",
      "$ref": "#/models/Error"
    }
  }
}
